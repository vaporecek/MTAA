<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mathew.movies.EditMovieInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Where to watch:"
        android:id="@+id/tv_where"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/tv_rating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rating:"
        android:id="@+id/tv_rating"
        android:textStyle="bold"
        android:layout_alignTop="@+id/spinner_Rating"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/spinner_Rating"
        android:layout_alignEnd="@+id/tv_gander" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gander:"
        android:id="@+id/tv_gander"
        android:textStyle="bold"
        android:password="false"
        android:layout_alignTop="@+id/spinner_Gander"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Screenplay:"
        android:id="@+id/tv_screenplay"
        android:textStyle="bold"
        android:password="false"
        android:layout_above="@+id/tv_country"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/tv_where_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Country:"
        android:id="@+id/tv_country"
        android:textStyle="bold"
        android:password="false"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_where_back"
        android:layout_alignBottom="@+id/tv_where"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_screenplay_back"
        android:editable="true"
        android:layout_above="@+id/spinner_Country"
        android:layout_alignEnd="@+id/spinner_Country"
        android:layout_alignTop="@+id/tv_screenplay"
        android:layout_alignStart="@+id/spinner_Country" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_title"
        android:layout_alignParentEnd="true"
        android:editable="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tv_where_back"
        android:layout_alignStart="@+id/et_desc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_desc"
        android:layout_below="@+id/et_title"
        android:layout_alignStart="@+id/tv_where_back"
        android:layout_alignEnd="@+id/spinner_Rating" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo"
        android:layout_above="@+id/tv_where"
        android:layout_toStartOf="@+id/et_title" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_Rating"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_screenplay" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_Gander"
        android:layout_above="@+id/tv_screenplay_back"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tv_screenplay_back" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_Country"
        android:layout_below="@+id/tv_screenplay"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tv_where_back" />

</RelativeLayout>
