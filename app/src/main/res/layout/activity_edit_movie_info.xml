<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mathew.movies.EditMovieInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Play Schedule:"
        android:id="@+id/tv_PlaySchedule"
        android:editable="false"
        android:singleLine="false"
        android:textStyle="bold"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/tv_rating"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_where_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Where to watch:"
        android:id="@+id/tv_where"
        android:textStyle="bold"
        android:layout_above="@+id/tv_PlaySchedule"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rating:"
        android:id="@+id/tv_rating"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_where_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gander:"
        android:id="@+id/tv_gander"
        android:textStyle="bold"
        android:password="false"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/tv_screenplay"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_where_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Screenplay:"
        android:id="@+id/tv_screenplay"
        android:textStyle="bold"
        android:password="false"
        android:layout_above="@+id/tv_country"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/tv_where_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Country:"
        android:id="@+id/tv_country"
        android:textStyle="bold"
        android:password="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp"
        android:layout_toStartOf="@+id/tv_where_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_where_back"
        android:layout_alignBottom="@+id/tv_where"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/et_playSchedule"
        android:layout_alignBottom="@+id/tv_PlaySchedule"
        android:layout_alignStart="@+id/tv_where_back"
        android:editable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_rating_back"
        android:layout_alignBottom="@+id/tv_rating"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_gander_back"
        android:layout_alignBottom="@+id/tv_gander"
        android:layout_alignStart="@+id/tv_rating_back"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_screenplay_back"
        android:layout_alignBottom="@+id/tv_screenplay"
        android:layout_alignStart="@+id/tv_gander_back"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_country_back"
        android:layout_alignBottom="@+id/tv_country"
        android:layout_alignStart="@+id/tv_screenplay_back"
        android:editable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/btn_edit"
        android:layout_alignBottom="@+id/tv_screenplay"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btn_delete"
        android:layout_alignBottom="@+id/tv_country_back"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_title"
        android:layout_alignParentEnd="true"
        android:editable="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tv_where_back"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/et_title"
        android:layout_alignStart="@+id/tv_where_back"
        android:layout_alignEnd="@+id/et_playSchedule" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo"
        android:layout_above="@+id/tv_where"
        android:layout_toStartOf="@+id/et_title" />

</RelativeLayout>
